<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="anime.MainPage"
             BackgroundColor="#fff">

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="30">
        <Image Source="diary2.png"
               SemanticProperties.Description="My Anime List"
               HeightRequest="150"
               VerticalOptions="Center" />


        <StackLayout Spacing="10" HorizontalOptions="CenterAndExpand">
            <Label  FontSize="22" FontAttributes="Bold" Text="Welcome to your virtual"
                    HorizontalOptions="CenterAndExpand" />
            <Label TextColor="#ffbbd1" FontSize="52" FontAttributes="Bold" Text="Anime Diary"
                    HorizontalOptions="CenterAndExpand" />
        </StackLayout>
        
        
        <Button Text="View Anime List" Clicked="ViewAnimeList_Clicked"
                TextColor="#ffbbd1" BackgroundColor="#Afffff"
                WidthRequest="200" HeightRequest="50"
                FontAttributes="Bold" FontSize="15" HorizontalOptions="CenterAndExpand" />
    </StackLayout>
</ContentPage>
