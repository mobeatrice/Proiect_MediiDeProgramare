<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:anime"
             x:Class="anime.AnimeListPage"
             BackgroundColor="#fff">

    <StackLayout>
        <ListView x:Name="AnimeListView" ItemSelected="AnimeListView_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Title}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Add Anime" Clicked="AddAnime_Clicked" TextColor="#ffbbd1" BackgroundColor="#ADDfff" WidthRequest="200" HeightRequest="50"/>
    </StackLayout>
</ContentPage>